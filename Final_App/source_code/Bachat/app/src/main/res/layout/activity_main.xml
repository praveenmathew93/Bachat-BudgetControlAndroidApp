<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btm_nav_menu" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbarcolor"
        android:layout_alignParentBottom="true"
        android:id="@+id/btm_nav_menu"
        app:menu="@menu/btm_nav_menu"
        app:itemIconTint="@drawable/btmnavnview"
        app:itemTextColor="@drawable/btmnavnview"
        app:labelVisibilityMode="labeled"/>

</RelativeLayout>