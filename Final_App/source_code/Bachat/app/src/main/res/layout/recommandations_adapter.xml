<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@color/primarytextbetadarkbackground"
    app:cardBackgroundColor="@color/primarytextbetadarkbackground">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/textViewCategoryName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageViewCategoryImage"
            android:gravity="center"
            android:text="Category"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColorBetalightbackground"/>

        <ImageView
            android:id="@+id/imageViewCategoryImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>