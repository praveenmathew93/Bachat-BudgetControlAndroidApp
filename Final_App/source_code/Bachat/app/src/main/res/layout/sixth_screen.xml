<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMPTY TEXT"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnGoToShowAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#4C4C4C"
        android:text="GO TO SHOW ALL"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnAddDataToDb"
        />

    <Button
        android:id="@+id/btnAddDataToDb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#4C4C4C"
        android:text="Add Data"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        /><![CDATA[

    app:layout_constraintTop_toBottomOf="@+id/btnnew" />
]]>
</RelativeLayout>