<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/Grey"
    app:cardBackgroundColor="@color/white_background"
    app:cardCornerRadius="6dp"
    android:layout_marginVertical="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/categoryIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="left" />


        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/categoryIcon"
            android:text="Category"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            tools:ignore="RtlCompat"
            android:textColor="@color/primaryTextColorBetalightbackground"/>

        <TextView
            android:id="@+id/transactions_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/categoryIcon"
            android:layout_below="@id/category_name"
            android:text="Transaction Count"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            tools:ignore="RtlCompat"
            android:fontFamily="@font/roboto"
            android:textColor="@color/primaryTextColorLightBlack"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="Percent"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            tools:ignore="RtlCompat"
            android:fontFamily="@font/roboto"
            android:textColor="@color/primaryTextColorBetalightbackground"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

