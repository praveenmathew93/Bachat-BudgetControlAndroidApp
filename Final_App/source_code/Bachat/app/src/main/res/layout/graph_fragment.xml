<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphFragment"
    android:background="@color/white_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <RelativeLayout
                android:id="@+id/lin_lay_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_screen">
                <TextView
                    android:id="@+id/transactionhistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Graphs"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/transactionhistory"
                    android:background="@drawable/extend_graph_background">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/btnMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:text="July "
                            android:textSize="20sp"
                            android:fontFamily="@font/roboto"
                            android:padding="0dp"
                            android:includeFontPadding="false"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:textColor="@color/primaryTextColorBetalightbackground"/>

                        <TextView
                            android:id="@+id/btnYear"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="2020"
                            android:textAllCaps="false"
                            android:fontFamily="@font/roboto"
                            android:textSize="20sp"
                            android:layout_toRightOf="@id/btnMonth"
                            android:textColor="@color/primaryTextColorBetalightbackground"/>
                    </RelativeLayout>

                </RelativeLayout>



            </RelativeLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/childRelLayout"
                android:layout_below="@id/lin_lay_1">

                <FrameLayout
                    android:id="@+id/container_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>