<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/primarytextbetadarkbackground"
    app:cardBackgroundColor="@color/primarytextbetadarkbackground"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/textViewCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageViewCategoryImage"
            android:gravity="center"
            android:text="Category"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:textColor="@color/primaryTextColorBetalightbackground"/>

        <ImageView
            android:id="@+id/imageViewCategoryImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/transaction_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewCategoryName"
            android:gravity="center"
            android:text="Transaction Count"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/primaryTextColorLightBlack"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>