<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_screen">

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/btn_Back"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/ic_arrow_back"
            android:background="@null"/>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            android:text="Export"
            android:textColor="@color/primarytextbetadarkbackground"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true" />



        <Button
            android:id="@+id/btnViewSDCard"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/toolbar_title"
            android:textColor="@color/primaryTextColorBetalightbackground"
            android:background="@drawable/add_contact"
            android:layout_marginBottom="30dp"
            android:text="Memory" />

        <TextView
            android:padding="10dp"
            android:layout_below="@id/btnViewSDCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textAlignment="center"
            android:text="#Only Internal Memory supported\n\n#Please do not select file from Drive"/>
    </RelativeLayout>


    <ListView
        android:layout_below="@+id/relLayout"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/lvInternalStorage"></ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        app:srcCompat="@drawable/ic_home"
        app:elevation="4dp"
        android:tint="@color/Black"
        android:backgroundTint="#FFFFFF"/>

</RelativeLayout>