<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:padding="10dp">

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:shadowColor="@null"
                    android:text="Clear Filters"
                    android:textColor="@color/setupColor"
                    android:fontFamily="@font/roboto"/>


                <LinearLayout
                    android:id="@+id/lin_lay_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <TextView
                            android:id="@+id/chooseCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:text="Category"
                            android:textColor="@color/primaryTextColorBetalightbackground"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto" />

                        <View
                            android:id="@+id/divider1"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/primaryTextColorLightBlack_2" />

                        <TextView
                            android:id="@+id/chooseMOP"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:text="MOP"
                            android:textColor="@color/primaryTextColorBetalightbackground"
                            android:textSize="15sp" />

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/primaryTextColorLightBlack_2" />

                        <TextView
                            android:id="@+id/chooseDate"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/spnMop"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:text="Start Date"
                            android:textColor="@color/primaryTextColorBetalightbackground"
                            android:textSize="15sp" />

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/primaryTextColorLightBlack_2" />


                        <TextView
                            android:id="@+id/chooseDate_2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/chooseDate"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:text="End Date"
                            android:textColor="@color/primaryTextColorBetalightbackground"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/primaryTextColorLightBlack_2" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/lin_lay_1"
                    android:orientation="vertical">
                        <Spinner
                            android:id="@+id/spnCategory"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/primaryTextColorBetalightbackground"
                            />


                        <View
                            android:id="@+id/divider4"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/primaryTextColorLightBlack_2" />


                        <Spinner
                            android:id="@+id/spnMop"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/spnCategory"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/primaryTextColorBetalightbackground" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/primaryTextColorLightBlack_2" />

                        <TextView
                            android:id="@+id/editFirstDate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/spnMop"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:text="Choose Start Date"
                            android:fontFamily="@font/roboto"
                            android:textSize="15sp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/primaryTextColorBetalightbackground" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/primaryTextColorLightBlack_2" />

                        <TextView
                            android:id="@+id/editSecondDate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/editFirstDate"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toEndOf="@+id/chooseDate_2"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center_vertical"
                            android:text="Choose End Date"
                            android:paddingLeft="10dp"
                            android:textColor="@color/primaryTextColorBetalightbackground" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/primaryTextColorLightBlack_2" />


                </LinearLayout>
















        </RelativeLayout>


</RelativeLayout>