<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_background">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Customise your notes!"
        android:textColor="@color/primaryTextColorBetalightbackground"
        android:fontFamily="@font/roboto"
        android:textSize="20sp" />


    <View
        android:id="@+id/divider13"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/heading"
        android:background="@color/primaryTextColorLightBlack_2" />


    <TextView
        android:id="@+id/txtBoldDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/divider13"
        android:text="-To bold your notes, place a grave accent ( ` ) on both side of your text like below:\n`BOLD`"
        android:textColor="@color/primaryTextColorBetalightbackground"
        android:fontFamily="@font/roboto"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/txtItalicDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtBoldDetail"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="-To italicize your notes, place a tilde ( ~ ) on both side of your text like below:\n~Italic~"
        android:textColor="@color/primaryTextColorBetalightbackground"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"/>


    <TextView
        android:id="@+id/txtUnderDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtItalicDetail"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="-To underline your notes, place an underscore( _ ) on both side of your text like below:\n_Underline_"
        android:textColor="@color/primaryTextColorBetalightbackground"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/txtFootNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUnderDetail"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Then click on customise to apply desired customization to your notes... "
        android:textColor="@color/primaryTextColorBetalightbackground"
        android:fontFamily="@font/roboto"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/Example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NoteHelp"
        android:layout_below="@id/txtFootNote"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/primaryTextColorBetalightbackground"/>

    <TextView
        android:id="@+id/txtFootNote_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Example"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Please click on customise only once, after you finished adding the customisations and before you finish"
        android:textColor="@color/primaryTextColorBetalightbackground"
        android:fontFamily="@font/roboto"
        android:textSize="15dp" />

